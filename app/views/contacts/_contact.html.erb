<tr>
  <td class="middle">
    <div class="media">
      <div class="media-left">
        <a href="#">
          <%= contact.avatar.present? ? image_tag("/system/contacts/avatars/000/000/121/thumb/#{contact.avatar_file_name}", class: "media-object", style: "width:100px; height:100px") : image_tag("/system/contacts/avatars/000/000/121/thumb/default.png", class: "media-object", style: "width:100px; height:100px") %>
        </a>
      </div>
      <div class="media-body">
        <h4 class="media-heading"><%= contact.name %></h4>
        <address>
          <strong><%= contact.company %></strong><br>
          <%= contact.email %>
        </address>
      </div>
    </div>
  </td>
  <td width="100" class="middle">
    <div>
      <%= link_to edit_contact_path(contact), class: "btn btn-circle btn-default btn-xs", title: "Edit" do %>
        <i class="glyphicon glyphicon-edit"></i>
      <% end %>
      <a href="#" class="btn btn-circle btn-danger btn-xs" title="Edit">
        <i class="glyphicon glyphicon-remove"></i>
      </a>
    </div>
  </td>
</tr>
